@model string

@if(!string.IsNullOrEmpty(Model)){
    var statusMessage = Model.StartsWith("Error") ? "danger" : "success";

    <div class="alert alert-@statusMessage alert-dismissible" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model
</div>

}